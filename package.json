{
  "name": "voiceowl-backend",
  "version": "1.0.0",
  "description": "VoiceOwl transcription API service",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "npm run build && nodemon dist/src/app.js",
    "build": "npm run format && if exist dist rmdir /s /q dist && tsc",
    "watch": "tsc -w",
    "serve": "nodemon dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "lint": "eslint",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "transcription",
    "api",
    "azure",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "microsoft-cognitiveservices-speech-sdk": "^1.38.0",
    "mongoose": "^8.0.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
